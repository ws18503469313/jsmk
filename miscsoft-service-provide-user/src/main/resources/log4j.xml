<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <!-- Console output -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{yyyy-MM-dd HH:mm:ss,SSS} %m%n"/>
        </layout>
    </appender>

	<appender name="Daily_File" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="C:/logs/shiroLog.log" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{yyyy-MM-dd HH:mm:ss,SSS} %t %m (%F:%L) %n" />
		</layout>
	</appender>

    <category name="java.sql" additivity="false">
        <priority value="debug" />
        <appender-ref ref="CONSOLE" />
    </category>
    
    <category name="org.apache.ibatis.cache" additivity="false">
        <priority value="debug" />
        <appender-ref ref="CONSOLE" />
    </category>
    
